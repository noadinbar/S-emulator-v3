<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="rootScroll" fitToHeight="true" fitToWidth="true" prefHeight="600.0" prefWidth="900.0" styleClass="skin-default" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.execution.ExecutionSceneController">

    <content>
        <VBox fx:id="contentRoot" minHeight="410.0" minWidth="600.0" prefHeight="600.0" prefWidth="800.0" styleClass="content-root">

            <children>
                <fx:include fx:id="header" source="header/header.fxml" />
                <SplitPane dividerPositions="0.78" VBox.vgrow="ALWAYS">
                    <items>
                        <VBox maxHeight="Infinity" maxWidth="Infinity" spacing="8.0" VBox.vgrow="ALWAYS">
                            <children>
                                <StackPane VBox.vgrow="ALWAYS">
                                    <fx:include fx:id="programTable" source="table/instruction/instructions.fxml" />
                                </StackPane>

                                <fx:include fx:id="summary" source="summary/summary.fxml" />

                                <StackPane VBox.vgrow="ALWAYS">
                                    <fx:include fx:id="chainTable" source="table/instruction/instructions.fxml" />
                                </StackPane>
                            </children>
                            <padding>
                                <Insets bottom="8" left="8" right="8" top="8" />
                            </padding>
                        </VBox>

                        <VBox maxWidth="Infinity" minWidth="320.0" prefWidth="340.0" spacing="8.0">
                            <children>

                                <fx:include fx:id="runOptions" source="run/options/run_options.fxml" />

                                <HBox fillHeight="true" spacing="8.0">
                                    <children>
                                        <StackPane prefHeight="455.0" prefWidth="182.0" HBox.hgrow="ALWAYS">
                                            <fx:include fx:id="outputs" source="outputs/outputs.fxml" />
                                        </StackPane>

                                        <VBox maxWidth="Infinity" minWidth="130.0" prefWidth="130.0" spacing="6.0" HBox.hgrow="NEVER">
                                            <children>
                                                <Label text="Architecture Selection" />
                                                <ComboBox fx:id="cmbArchitecture" promptText="Architecture" />
                                                <StackPane>
                                                    <fx:include fx:id="inputs" source="inputs/inputs.fxml" />
                                                </StackPane>
            
                                            <HBox alignment="CENTER_RIGHT">
                                                <children>
                                                    <javafx.scene.control.Button fx:id="btnBackToOpening" onAction="#onBackToOpening" text="Back to dashboard" />
                                                </children>
                                            </HBox>
                                            </children>
                                            <padding><Insets right="10.0" /></padding>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>

                            <padding>
                                <Insets bottom="8.0" top="8.0" />
                            </padding>
                        </VBox>

                    </items>
                </SplitPane>
            </children>
            
            <padding>
                <Insets bottom="8" left="8" right="8" top="4" />
            </padding>
        </VBox>
    </content>
</ScrollPane>
