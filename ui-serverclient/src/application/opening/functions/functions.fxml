<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="functionsRoot" maxWidth="1.7976931348623157E308" prefHeight="260.0" prefWidth="440.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.opening.functions.FunctionsController">

    <top>
        <Label fx:id="titleLabel" text="Available Functions" BorderPane.alignment="CENTER_LEFT" />
    </top>

    <center>
        <TableView fx:id="functionsTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nameCol" text="Function" />
                <TableColumn fx:id="programCol" text="Program" />
                <TableColumn fx:id="uploaderCol" text="Uploader" />
                <TableColumn fx:id="instrCol" prefWidth="92.6666259765625" text="#Instructions" />
                <TableColumn fx:id="degreeCol" prefWidth="86.0" text="Max Degree" />
            </columns>
            <placeholder><Label text="No functions yet" /></placeholder>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="8" BorderPane.alignment="CENTER_RIGHT">
            <Button fx:id="executeBtn" onAction="#onExecuteAction" text="Execute function" />
        </HBox>
    </bottom>

    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
</BorderPane>
