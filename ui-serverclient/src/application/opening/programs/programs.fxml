<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.opening.programs.ProgramsController"
            fx:id="programsRoot"
            prefHeight="260.0" prefWidth="440.0" maxWidth="1.7976931348623157E308">

    <top>
        <Label fx:id="titleLabel" text="Available Programs" BorderPane.alignment="CENTER_LEFT"/>
    </top>

    <center>
        <TableView fx:id="programsTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nameCol"        text="Program"/>
                <TableColumn fx:id="uploaderCol"    text="Uploader"/>
                <TableColumn fx:id="instrCol"       text="#Instructions"/>
                <TableColumn fx:id="degreeCol"      text="Max Degree"/>
                <TableColumn fx:id="runsCol"        text="#Runs"/>
                <TableColumn fx:id="avgCreditsCol"  text="Avg Credits"/>
            </columns>
            <placeholder><Label text="No programs yet"/></placeholder>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="8" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
            <Button fx:id="executeBtn" text="Execute program" onAction="#onExecuteAction"/>
        </HBox>
    </bottom>

    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
</BorderPane>
