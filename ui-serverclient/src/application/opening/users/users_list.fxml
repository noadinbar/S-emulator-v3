<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="usersRoot" maxWidth="1.7976931348623157E308" prefHeight="221.0" prefWidth="321.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.opening.users.UsersController">

    <top>
        <Label fx:id="titleLabel" text="Available Users" BorderPane.alignment="CENTER_LEFT" />
    </top>

    <center>
        <ListView fx:id="usersListView" prefHeight="197.0" prefWidth="355.0" BorderPane.alignment="CENTER">
            <placeholder>
                <Label text="No users connected yet" />
            </placeholder>
        </ListView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" prefWidth="420.0" spacing="8" BorderPane.alignment="CENTER_RIGHT">
            <Button fx:id="unselectButton" onAction="#onUnselectUser" text="Unselect user" />
        </HBox>
    </bottom>

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
</BorderPane>
