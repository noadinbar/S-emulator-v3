<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="rootScroll" prefHeight="610.0" prefWidth="805.0" styleClass="skin-default" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ExecutionSceneController">

   <stylesheets>
      <URL value="@app.css" />
   </stylesheets>

   <content>
      <VBox fx:id="contentRoot" minHeight="410.0" minWidth="600.0" prefHeight="600.0" prefWidth="800.0" styleClass="content-root">

         <children>

            <fx:include fx:id="header" source="header/header.fxml" />


            <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
               <items>


                  <VBox spacing="8.0">
                     <children>

                        <StackPane VBox.vgrow="ALWAYS">
                           <fx:include fx:id="programTable" source="table/instruction/instructions.fxml" />
                        </StackPane>


                        <fx:include fx:id="summary" source="summary/summary.fxml" />


                        <StackPane VBox.vgrow="ALWAYS">
                           <fx:include fx:id="chainTable" source="table/instruction/instructions.fxml" />
                        </StackPane>
                     </children>
                     <padding>
                        <Insets bottom="8" left="8" right="8" top="8" />
                     </padding>
                  </VBox>


                  <VBox spacing="8.0">
                     <children>

                        <fx:include fx:id="runOptions" source="run/options/run_options.fxml" />


                        <HBox fillHeight="true" prefHeight="193.0" prefWidth="270.0" spacing="8.0">
                           <children>
                              <StackPane prefHeight="193.0" prefWidth="191.0" HBox.hgrow="ALWAYS">
                                 <fx:include fx:id="outputs" source="outputs/outputs.fxml" />
                              </StackPane>
                              <StackPane prefHeight="193.0" prefWidth="109.0" HBox.hgrow="NEVER">
                                 <fx:include fx:id="inputs" source="inputs/inputs.fxml" />
                                 <padding>
                                    <Insets right="10.0" />
                                 </padding>
                              </StackPane>
                           </children>
                        </HBox>


                        <StackPane VBox.vgrow="ALWAYS">
                           <fx:include fx:id="history" source="table/history/history.fxml" />
                        </StackPane>
                     </children>
                     <padding>
                        <Insets bottom="8.0" top="8.0" />
                     </padding>
                  </VBox>

               </items>
            </SplitPane>
         </children>

         <padding>
            <Insets bottom="8" left="8" right="8" top="8" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
